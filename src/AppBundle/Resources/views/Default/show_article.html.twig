{% extends 'base.html.twig' %}
{% block body %}
    <h1>News Collector</h1>

        {% if article.visible == true %}

            <h2>{{ article.title }}</h2>
            <div>{{ article.content }}</div>
            <p>
                Objavljeno: {{ article.datePublished|date('d.m.Y.') }}
            </p>
            <p>
                kategorija: {% for category in article.categories %}
                    {{ category.name }}
                {% endfor %}
                <br> izvor:<a href="{{ article.link }}">{{ article.source }}</a></p>
        {% endif %}
    <br>
    <a href="{{ path('homepage') }}">Natrag</a>
{% endblock %}